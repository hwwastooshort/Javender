<configuration>

    <!-- Definition der Encoder f端r einheitliche Log-Muster -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Dateiname f端r das Log -->
        <file>logs/application.log</file>

        <!-- Rollierende Log-Dateien: Alte Dateien werden archiviert -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Log-Datei pro Tag archivieren -->
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Maximal 30 Log-Dateien behalten -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Encoder f端r Log-Nachrichten -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger f端r JOOQ konfigurieren -->
    <logger name="org.jooq" level="WARN" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root-Logger-Konfiguration -->
    <root level="info">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>