<configuration>

    <!-- Definition der Encoder für einheitliche Log-Muster -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Dateiname für das Log -->
        <file>logs/application.log</file>

        <!-- Rollierende Log-Dateien: Alte Dateien werden archiviert -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Log-Datei pro Tag archivieren -->
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Maximal 30 Log-Dateien behalten -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <!-- Encoder für Log-Nachrichten -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root-Logger-Konfiguration -->
    <root level="info">
        <!-- Logs werden standardmäßig in die Datei geschrieben -->
        <appender-ref ref="FILE" />
        <!-- Fehler (ERROR) werden zusätzlich im Terminal ausgegeben -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>